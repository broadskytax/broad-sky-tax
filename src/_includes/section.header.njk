{% for item in collections.sections %}
  {% if item.data.type === 'header' %}
    <div class="flex flex-col justify-center h-full py-12">
      <div class="self-center items-center flex flex-col w-full md:w-5/6 xl:w-2/3 px-4 sm:px-0">
        <div class="w-full text-center sm:text-left px-8">
          <div class="mb-8 [&>h1]:text-4xl [&>h1]:font-bold [&>h1]:tracking-widest [&>h1]:text-gray-800 [&>h1]:mb-4 [&>h2]:text-2xl [&>h2]:font-semibold [&>h2]:mb-4 [&>ul]:list-disc [&>ul]:pl-5 [&>ul]:space-y-2 [&>li]:text-2xl [&>li]:font-medium text-left">
            {{ item.templateContent | safe }}
          </div>
          <div class="flex flex-row w-full justify-center sm:justify-start mt-12">
            <a class="px-10 py-2 text-gray-200 bg-brand rounded-full shadow-md text-lg hover:bg-gray-800 hover:border-red" href="#about">
              More Information
            </a>
          </div>
        </div>
      </div>
    </div>
  {% endif %}
{% endfor %}